/* pages/bindphone/bindphone.wxss */

userinfo {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.btn_ringup {
  width: 610rpx;
  height: 88rpx;
  margin-top: 50rpx;
  background: linear-gradient(0deg, rgba(247, 2, 12, 1) 0%, rgba(246, 80, 87, 1) 100%);
  border-radius: 14rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  font-size: 35rpx;
  color: rgba(255, 255, 255, 1);
}

.changeInfo {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 90%;
  margin: 50rpx auto;
}

.changeInfoName {
  height: 80rpx;
  width: 100%;
  background: #fff;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #ccc;
  box-sizing: border-box;
  margin-top: 50rpx;
}

.changeInfoNameList {
  position: relative;
  height: 80rpx;
  border-bottom: 1rpx solid #ccc;
  width: 100%;
  background: #fff;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.wxLogin {
  width: 106rpx;
  height: 106rpx;
  margin: 66rpx auto 0;
  position: relative;
}

.wxLogin image {
  width: 100%;
  height: 100%;
}

.wxLogin button {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
}

.lable {
  width: 100%;
  height: 28rpx;
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.tel {
  width: 80%;
  margin: auto;
  font-size: 30rpx;
  margin-top: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.codeBtn {
  position: absolute;
  right: 0;
  top: -10rpx;
  width: 40%;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  text-align: center;
  border-left: 1rpx solid rgba(221, 218, 218, 1);
}

.changeInfoName input {
  width: 100%;
  height: 100%;
  font-size: 30rpx;
}

.changeInfoNameList input {
  width: 100%;
  height: 100%;
  font-size: 30rpx;
}

.changeBtn {
  width: 40%;
  height: 100rpx;
  background: #fff;
  color: #000;
  border-radius: 50rpx;
  position: absolute;
  bottom: 10%;
  left: 50%;
  text-align: center;
  margin-left: -20%;
  line-height: 100rpx;
}

.phone1 {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid rgba(221, 218, 218, 1);
}

.phone {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid rgba(221, 218, 218, 1);
}

.inp1 {
  width: 443rpx;
  margin-right: 0;
  padding: 20rpx;
  font-size: 35rpx;
  text-align: left;
}

.inp2 {
  width: 265rpx;
  padding: 20rpx;
  font-size: 35rpx;
  margin-left: 126rpx;
  text-align: left;
}

.chang {
  width: 678rpx;
  height: 88rpx;
  background: linear-gradient(0deg, rgba(247, 2, 12, 1) 0%, rgba(246, 80, 87, 1) 100%);
  border-radius: 14rpx;
  color: #fff;
  font-size: 35rpx;
  margin-top: 180rpx;
}
.bl {
  width: 15%;
  padding: 12rpx;
}
.ma {
  width: 197rpx;
  padding: 30rpx;
  font-size: 30rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  border-left: 1rpx solid rgba(221, 218, 218, 1);
  text-align: center;
}
