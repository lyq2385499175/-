/* pages/ImmediateEvaluation/ImmediateEvaluation.wxss */

.dialog-box {
  position: fixed;
  z-index: 999;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.7);
}

.head_changed {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 40rpx 10rpx 40rpx;
}

.head_changed .yu {
  font-size: 35rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(60, 60, 60, 1);
}

.head_changed .cancel {
  font-size: 24rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(142, 144, 145, 1);
  margin-right: 60rpx;
}

.portrait {
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.director {
  width: 159rpx;
  height: 159rpx;
}

.location {
  width: 100%;
  background: rgba(248, 248, 248, 1);
}

.location .message {
  padding: 30rpx 60rpx 30rpx 60rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(50, 50, 50, 1);
}

.process {
  margin-top: 50rpx;
}

.kuai {
  display: flex;
  height: 112rpx;
  font-size: 30rpx;
  margin-left: 15%;
}

.follow {
  width: 30rpx;
  height: 112rpx;
  margin-right: 10rpx;
}

.detail {
  width: 100%;
  height: 63rpx;
  margin-left: 21rpx;
}

.top {
  font-family: PingFangSC-Regular;
  font-weight: bold;
  color: rgba(254, 114, 0, 1);
}

.bottom {
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  color: #a7a7a7;
}

.btn_immediate {
  width: 678rpx;
  height: 88rpx;
  background: linear-gradient(0deg, rgba(247, 2, 12, 1) 0%, rgba(246, 80, 87, 1) 100%);
  border-radius: 14rpx;
  color: #fff;
  margin-top: 90rpx;
  font-size: 35rpx;
}

/*使屏幕变暗  */

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

/*对话框 */

.commodity_attr_box {
  width: 100%;
  height: 100vh;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  top: 315rpx;
}

.commodity_attr_box .commodity_card {
  width: 100%;
  height: 630rpx;
  background: #fff;
  position: relative;
  top: 262rpx;
  font-size: 30rpx;
}

.immdeiate_text {
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.immediate_view {
  margin-left: 58rpx;
  margin-top: 55rpx;
}

.immediat_textView {
  width: 100%;
  height: 80rpx;
  color: #8e9091;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.text_voewtext_voew {
  width: 62rpx;
  height: 30rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(60, 60, 60, 1);
}

.btn_immediateEate {
  width: 678rpx;
  height: 88rpx;
  background: linear-gradient(0deg, rgba(247, 2, 12, 1) 0%, rgba(246, 80, 87, 1) 100%);
  border-radius: 15rpx;
  color: #fff;
  margin-top: 60rpx;
  font-size: 35rpx;
}

/*星星评价的每个图片 */
.container .evaluate_contant .evaluate_item .evaluate_box .star-image {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  src: "http://pic25.photophoto.cn/20121221/0005018616515359_b.jpg";
}

/*星星的左边和右边区域<点击左边半个星星，点击右边整个星星> */
.container .evaluate_contant .evaluate_item .evaluate_box .star-image .item {
  position: absolute;
  top: 0rpx;
  width: 20rpx;
  height: 40rpx;
}
.evaluate_contant {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.evaluate_box {
  width: 100%;
  display: flex;
}
/*评价区域 */

.container .evaluate_contant .evaluate_item {
  font-size: 30rpx;
  color: gray;
  margin-left: 60rpx;
  margin-top: 30rpx;
}

/*评价标题 */

.container .evaluate_contant .evaluate_item .evaluate_title {
  display: inline-block;
}

/*评价盒子 */

.container .evaluate_contant .evaluate_item .evaluate_box {
  position: absolute;
  left: 220rpx;
  width: 100%;
  display: inline-block;
}

.container {
  padding: 0;
  margin-top: 70rpx;
}
