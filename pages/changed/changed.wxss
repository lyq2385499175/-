.head_changed {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 40rpx 10rpx 40rpx;
}

.head_changed .yu {
  font-size: 35rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(60, 60, 60, 1);
}

.head_changed .cancel {
  font-size: 24rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(142, 144, 145, 1);
  margin-right: 60rpx;
}

.portrait {
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.director {
  width: 159rpx;
  height: 159rpx;
}

.location {
  width: 100%;
  background: rgba(248, 248, 248, 1);
}

.location .message {
  padding: 30rpx 60rpx 30rpx 60rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(50, 50, 50, 1);
}

.process {
  margin-top: 50rpx;
}

.kuai {
  display: flex;
  height: 112rpx;
  font-size: 30rpx;
  margin-left: 15%; 
}

.follow {
  width: 30rpx;
  height: 112rpx;
  margin-right: 10rpx;
}

.detail {
  width: 100%;
  height: 63rpx;
  margin-left: 21rpx;
}

.top {
  font-family: PingFangSC-Regular;
  font-weight: bold;
  color: rgba(254, 114, 0, 1);
}

.bottom {
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  color: #a7a7a7;
}

.btn_navigation {
  width: 678rpx;
  height: 88rpx;
  background: linear-gradient(0deg, rgba(247, 2, 12, 1) 0%, rgba(246, 80, 87, 1) 100%);
  border-radius: 14rpx;
  color: #fff;
